h1 Produkty:

.row
  .col 
    h6 Kategorie:
    p= cat(products_path, {key: params[:key]} )
  .col 
    h6 Sortwanie według:
    p= sorting_link(products_path, 'created_at asc', 'czas dodania (rosnąco)', {key: params[:key]})
    p= sorting_link(products_path, 'created_at desc', 'czas dodania (malejąco)', {key: params[:key]})



