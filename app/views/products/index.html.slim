table.table
  thead
    tr 
      th 
      th Nazwa
      th Cena
      th Opis
      th Kategoria
      th Ilość dostępnych sztuk
      th
      - if admin_user_signed_in?
        th
      - if admin_user_signed_in?
        th

  tbody
    - @products.each do |product|
      tr
        td = if product.picture.attached? then image_tag product.picture.variant(resize: "100x100")
        td = product.name
        td = number_to_currency(product.price,locale: :pl)<<' PLN'
        td = product.description
        td = product.category
        td = product.amount
        td = link_to 'Show', product
        - if admin_user_signed_in?
          td = link_to 'Edit', edit_product_path(product)
        - if admin_user_signed_in?
          td = link_to 'Destroy', product, data: { confirm: 'Are you sure?' }, method: :delete
